<h1>Restaurants</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>Street</th>
      <th>City</th>
      <th>Zip</th>
      <th>Ph</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.address_1 %></td>
        <td><%= restaurant.address_2 %></td>
        <td><%= restaurant.street %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.zip %></td>
        <td><%= restaurant.ph %></td>
        <td><%= link_to 'Show', restaurant, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<hr>
<%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-info" %>
