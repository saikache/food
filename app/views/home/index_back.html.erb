<div class="container">
  <div class="row">
    <div class="container">

<style type="text/css">
  .my{
    background: #890000;
    min-height: 65px;
    max-width: 190px;
  }
  
  .item-div {
    border: 2px solid #918C8B;
    margin: 0 2%;
    padding: 0
  }
  .img-css{
    width: auto;
    margin: 0 2%;
    max-height: 144px;
    min-height: 144px;
  }

  #accordion > .col-sm-3{
    padding-left: 0;
    padding-right: 0;
    margin: 5px 10px;
  }
  .cross{
    margin-right: 5px;
    border-radius: 50px;
    float: right;
    padding: 5px;
    z-index: 999;
    border: 2px solid #ccc;
  }
  .order-this{
    padding: 4px;
    margin: 0 -4px 4px 4px;
    background: red;
    text-align: center;
    font-weight: 600;
    color: #fff;
    font-size: 15px;
  }
</style>

      <div class="panel-group" id="accordion" style="padding: 10px;">
        <% @menus.each do |menu|%>
          <!-- <div class="col-sm-3 col-lg-9 panel panel-default"> -->
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title cursor" data-toggle="collapse" data-parent="#accordion" href="#<%=menu.id%>">
                <%= menu.name %>
              </h4>
            </div>
            <div id="<%= menu.id %>" class="panel-collapse collapse" style="margin: 15px 8px;">
                <div style="" class="row">
                <div class="container items-mar">
                  <%menu.main_items.each do |main_item|%>
                      

                    <div class="col-sm-9 col-lg-3 col-md-4 capitalize item-div">
                      <h5 style="text-align: center;font-weight: 600; margin: 4px 0"><%= main_item.name%></h5>
                      <div class="flip">
                        <div class="card_for_mains">
                          <div class="face front">
                            <div class="inner">
                              <%= image_tag main_item.photo(:thumb), class: "img-css"%>
                            </div>
                            <p class="order-this cursor flip_board">Order This</p>
                          </div> 
                          <div class="face back"> 
                            <span class="cross cursor"> X </span>
                            <div class="inner text-center"> 
                              <div class="row">
                                <div class="col-sm-9">
                                  <%= select_tag("people", options_from_collection_for_select(main_item.items, "id", "name"),  { prompt: "Select One Item", class: "form-control" })%>

                                </div>
                              </div>
                              <!-- <h3>Improved efficiency through automation</h3> -->
                              <!-- <button type="button" class="btn btn-default">Know More</button> -->
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>

<!--                           
                          <div class="col-sm-9 col-lg-3 col-md-4 cursor capitalize item-div">
                            <h5 style="text-align: center;font-weight: 600; margin: 4px 0"><%= main_item.name%></h5>
                            <div >
                              <a>
                                <%= image_tag main_item.photo(:thumb), class: "img-css"%>
                              </a>
                            </div>
                            <p class="order-this">Order This</p>
                          </div>
 -->
                  <%end%>
                </div>
              </div>

              <%#= render partial: 'items', locals: {menu: menu}%>
            </div>
          </div>
        <% end %>
      </div> 
    </div>
  </div>
</div>

<script type="text/javascript">
$('.flip_board').click(function(){
  $(this).parents().closest(".flip").find('.card_for_mains').toggleClass('flipped');
 });

// $(".flip").click(function() {
//   $(this).find('.card_for_mains').toggleClass('flipped');
// })

$(".cross").click(function(){
  $(this).parents().closest(".flip").find('.card_for_mains').toggleClass('flipped');
 });




  var first_div = $("#accordion .panel-collapse")[0]
  $(first_div).addClass("in")
</script>

<style type="text/css">

/*.flip {
  -webkit-perspective: 800;   
          perspective: 800;
        position: relative;
        text-align: center;
}*/
.flip .card_for_mains.flipped {
  -webkit-transform: rotatey(-180deg);
          transform: rotatey(-180deg);
}
.flip .card_for_mains {
    /*width: 270px;*/
    height: 178px;
    -webkit-transform-style: preserve-3d;
    -webkit-transition: 0.5s;
    transform-style: preserve-3d;
    transition: 0.5s;
    /*background-color: #fff;*/
   
}
.flip .card_for_mains .face {
  -webkit-backface-visibility: hidden ;
    backface-visibility: hidden ;
   z-index: 2;
}
.flip .card_for_mains .front {
   position: absolute;
   /*width: 270px;*/
   z-index: 1;
}
.flip .card_for_mains .front img{
  width: 270px;
  height: 100%;
}
.flip .card_for_mains .img {
   position: relative;
   width: 270px;
   height: 178px;
   z-index: 1;
   border: 2px solid #000;
}
.flip .card_for_mains .back {
  padding-top: 10%;
  -webkit-transform: rotatey(-180deg);
          transform: rotatey(-180deg);
  position: absolute;
}
.inner{
  margin:0px !important;
  text-align: center;
  width: 270px;
  max-height: 145px;
}  

</style>


